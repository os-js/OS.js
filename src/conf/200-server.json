{
  "server" : {
    "tmpdir": "/tmp",
    "srcdir": "src",
    "vfs": {
      "proxy": false,
      "homes":  "%DROOT%/vfs/home",
      "mounts": {
        "shared": "%DROOT%/vfs/public"
      },
      "groups": {
        "shared": []
      }
    },
    "api": {
      "groups": {
        "curl": "curl",
        "application": "application",
        "fs": "fs"
      }
    },
    "proxies": {
      "http-bind-jabber/": "http://localhost:5280/http-bind/"
    },
    "http": {
      "mode": "http",
      "cert": {
        "path": null,
        "name": "localhost",
        "options": {
          "requestCert": false,
          "rejectUnauthorized": false
        }
      }
    },
    "handler" : "%HANDLER%",
    "port" : 8000,
    "basedir": ""
  }
}
