{
  "client" : {
    "Connection": {
      "Type": "%CONNECTION%",
      "Handler": "%HANDLER%",

      "RootURI":      "",
      "APIURI":       "API",
      "FSURI":        "FS",
      "MetadataURI":  "packages.js",
      "ThemeURI":     "themes/styles",
      "SoundURI":     "themes/sounds",
      "IconURI":      "themes/icons",
      "FontURI":      "themes/fonts",
      "PackageURI":   "packages",
      "AppendVersion":""
    },

    "Locale":           "en_EN",
    "BugReporting":     true,
    "ShowQuitWarning":  false,
    "ReloadOnShutdown": false,

    "Preloads":  {},
    "AutoStart": [],
    "Languages": {},
    "Styles":    [],
    "Sounds":    {},
    "Icons":     {},
    "MIME":      {},
    "WM":        {},

    "Watermark": {
      "enabled": true,
      "lines": [
        "OS.js %VERSION%",
        "Copyright &copy; 2011-2016 <a href=\"mailto:andersevenrud@gmail.com\">Anders Evenrud</a>"
      ]
    },

    "PackageManager": {
      "UserPackages":  "home:///.packages",
      "UserMetadata":  "home:///.packages/packages.json"
    },

    "SettingsManager": {
      "VFS": {
        "scandir": {
          "showHiddenFiles": true,
          "showFileExtensions": true,
          "columns": ["filename", "mime", "size"]
        }
      },
      "SearchEngine": {
        "applications": true,
        "files": true,
        "paths": [
          "home:///"
        ]
      }
    },

    "VFS": {
      "MaxUploadSize": 2097152,
      "Home": "home:///",

      "GoogleDrive": {
        "Enabled": false
      },

      "OneDrive": {
        "Enabled": false
      },

      "Dropbox": {
        "Enabled": false
      },

      "Internal": {
        "osjs": {
          "enabled": true
        },
        "applications": {
          "enabled": true
        },
        "home": {
          "enabled": true
        }
      },

      "Mountpoints": {
        "shared": {
          "enabled":     true,
          "description": "Shared",
          "icon":        "places/folder-publicshare.png"
        }
      }
    },

    "DropboxAPI": {
      "ClientKey": ""
    },

    "GoogleAPI": {
      "ClientId": ""
    },

    "WindowsLiveAPI": {
      "ClientId": ""
    },

    "Fonts": {
      "default": "Karla",
      "list": [
        "Arial",
        "Arial Black",
        "Sans-serif",
        "Serif",
        "Trebuchet MS",
        "Impact",
        "Georgia",
        "Courier New",
        "Comic Sans MS",
        "Monospace",
        "Symbol",
        "Webdings"
      ]
    }
  }
}
